<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".selectPoints">

    <ImageView
        android:id="@+id/selectIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/colorAccent" />

    <Button
        android:id="@+id/point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#454545"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point2"
        app:layout_constraintEnd_toEndOf="@+id/point1"
        app:layout_constraintTop_toBottomOf="@+id/point1"
        android:textColor="#454545"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/point3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point3"
        app:layout_constraintEnd_toEndOf="@+id/point1"
        app:layout_constraintTop_toBottomOf="@+id/point2"
        android:textColor="#454545"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/point4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point4"
        app:layout_constraintEnd_toEndOf="@+id/point3"
        app:layout_constraintTop_toBottomOf="@+id/point3"
        android:textColor="#454545"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#454545"
        android:background="@drawable/buttonshape"/>

    <RelativeLayout
        android:id="@+id/myrelout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pointer1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="320dp"
            android:foregroundGravity="center"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/pointer2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="320dp"
            android:foregroundGravity="center"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/pointer3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="320dp"
            android:foregroundGravity="center"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/pointer4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="320dp"
            android:foregroundGravity="center"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>