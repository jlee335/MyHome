<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/UnityThemeSelector"
    tools:context=".UnityPlayerActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="OpenCV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="403dp"
        android:layout_height="537dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/right_move"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="84dp"
        android:text="우측이동"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bottom_move"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:text="아래로이동"
        app:layout_constraintEnd_toEndOf="@+id/right_move"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/left_move"
        app:layout_constraintTop_toBottomOf="@+id/left_move" />

    <Button
        android:id="@+id/fab"
        android:layout_width="178dp"
        android:layout_height="81dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_move"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:text="좌측이동"
        app:layout_constraintBottom_toBottomOf="@+id/right_move"
        app:layout_constraintEnd_toStartOf="@+id/right_move" />

    <Button
        android:id="@+id/top_move"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:text="위로이동"
        app:layout_constraintBottom_toTopOf="@+id/left_move"
        app:layout_constraintEnd_toEndOf="@+id/right_move"
        app:layout_constraintStart_toStartOf="@+id/left_move" />

    <Button
        android:id="@+id/roomScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Scan"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>